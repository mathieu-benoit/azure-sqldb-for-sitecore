{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serverName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "[resourceGroup().name]"
    },
    "databasePrefixName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "[resourceGroup().name]"
    },
    "elasticPoolName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "[resourceGroup().name]"
    },
    "location": {
      "type": "string",
      "allowedValues": [
        "Brazil South",
        "East US",
        "East US 2",
        "Central US",
        "North Central US",
        "South Central US",
        "West US",
        "West US 2"
      ],
      "defaultValue": "[resourceGroup().location]"
    },
    "adminLogin": {
      "type": "string",
      "minLength": 1
    },
    "adminLoginPassword": {
      "type": "securestring"
    },
    "databaseCollation": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
    },
    "databaseEdition": {
      "type": "string",
      "defaultValue": "Standard",
      "allowedValues": [
        "Basic",
        "Standard",
        "Premium"
      ]
    },
    "elasticPoolDtu": {
      "type": "int",
      "defaultValue": 100
    },
    "elasticPoolDatabaseDtuMin": {
      "type": "int",
      "defaultValue": 0
    },
    "elasticPoolDatabaseDtuMax": {
      "type": "int",
      "defaultValue": 100
    }
  },
  "variables": {
    "coreDatabaseName": "[concat(parameters('serverName'), '/', parameters('databasePrefixName'), '_Sitecore_Core')]",
    "masterDatabaseName": "[concat(parameters('serverName'), '/', parameters('databasePrefixName'), '_Sitecore_Master')]",
    "analyticsDatabaseName": "[concat(parameters('serverName'), '/', parameters('databasePrefixName'), '_Sitecore_Analytics')]",
    "webDatabaseName": "[concat(parameters('serverName'), '/', parameters('databasePrefixName'), '_Sitecore_Web')]",
    "databases": [
      "[variables('coreDatabaseName')]",
      "[variables('masterDatabaseName')]",
      "[variables('analyticsDatabaseName')]",
      "[variables('webDatabaseName')]"
    ]
  },
  "resources": [
    {
      "name": "[parameters('serverName')]",
      "type": "Microsoft.Sql/servers",
      "kind": "v12.0",
      "location": "[parameters('location')]",
      "apiVersion": "2014-04-01-preview",
      "tags": {
        "displayName": "database-server"
      },
      "properties": {
        "administratorLogin": "[parameters('adminLogin')]",
        "administratorLoginPassword": "[parameters('adminLoginPassword')]"
      }
    },
    {
      "name": "[concat(parameters('serverName'), '/', parameters('elasticPoolName'))]",
      "location": "[parameters('location')]",
      "type": "Microsoft.Sql/servers/elasticpools",
      "apiVersion": "2014-04-01-preview",
      "tags": {
        "displayName": "elastic-pool"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('serverName'))]"
      ],
      "properties": {
        "edition": "[parameters('databaseEdition')]",
        "dtu": "[parameters('elasticPoolDtu')]",
        "databaseDtuMin": "[parameters('elasticPoolDatabaseDtuMin')]",
        "databaseDtuMax": "[parameters('elasticPoolDatabaseDtuMax')]"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "name": "[variables('databases')[copyIndex()]]",
      "kind": "v12.0",
      "location": "[parameters('location')]",
      "apiVersion": "2014-04-01-preview",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('serverName'))]",
        "[concat('Microsoft.Sql/servers/', parameters('serverName') ,'/elasticpools/', parameters('elasticPoolName'))]"
      ],
      "properties": {
        "collation": "[parameters('databaseCollation')]",
        "elasticPoolName": "[parameters('elasticPoolName')]"
      },
      "copy": {
        "name": "addExistingDatabasesToElasticPool",
        "count": "[length(variables('databases'))]"
      }
    },
    {
      "type": "Microsoft.Sql/servers/firewallRules",
      "name": "[concat(parameters('serverName'), '/', 'AllowAllWindowsAzureIps')]",
      "location": "[parameters('location')]",
      "apiVersion": "2014-04-01-preview",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('serverName'))]"
      ],
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "0.0.0.0"
      }
    }
  ],
  "outputs": {}
}